<Window x:Class="Scarlett.ui.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scarlett.ui"
        mc:Ignorable="d"
        Title="About Scarlett" Height="280" Width="290" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <TextBlock HorizontalAlignment="Center" Margin="0,88,0,0" TextWrapping="Wrap" Text="Scarlett" VerticalAlignment="Top" FontSize="42" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Version 0.0.1b" VerticalAlignment="Top" FontSize="20" Margin="0,149,0,0"/>
        <Image Source="/icons/Logo.png" HorizontalAlignment="Center" Height="64" Margin="0,20,0,0" VerticalAlignment="Top" Width="64"/>
        <Button Content="OK" Click="OKButton_Click" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Width="64" Height="31" IsCancel="True"/>

    </Grid>
</Window>
